<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name="com.softtek.salesapplication.dto.EstadoProductos" table="estado_productos">
      <meta attribute="class-description">
         Esta clase contiene los estados posibles que puede tener un producto
      </meta>
      <id name="id_estado_producto" type="int" column="id_estado_producto">
         <generator class="native"/>
      </id>
      <property name="nombre" column="nombre" type="string"/>
      <property name="descripcion" column="descripcion" type="string"/>      
   </class>
</hibernate-mapping>