<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name="com.softtek.salesapplication.dto.Producto" table="tipo_pago">
      <meta attribute="class-description">
         Esta clase contiene los detalles de un pedido
      </meta>
      <id name="id_tipo_pago" type="int" column="id_tipo_pago">
         <generator class="native"/>
      </id>
      <property name="nombre" column="nombre" type="string"/>      
      <property name="descripcion" column="descripcion" type="string"/>   <!-- tipo de dato -->   
   </class>
</hibernate-mapping>